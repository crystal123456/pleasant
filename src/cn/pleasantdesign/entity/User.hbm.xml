<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.pleasantdesign.entity">
  <class name="User" table="pleasant_user">
  		<id name="id" type="java.lang.Integer">
  			<column name="id"></column>
			<generator class="native"></generator>
		</id>

		<property name="userName" column="user_name"></property>
		<property name="password" column="password"></property>
		<property name="pwdResetPromt" column="pwd_reset_promt"></property>
		<property name="pwdResetAnswer" column="pwd_reset_answer"></property>
		<property name="loginTime" column="login_time"></property>
  </class>
</hibernate-mapping>